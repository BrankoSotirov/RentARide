@model IEnumerable<VehicleIndexServiceModel>

@{
    ViewData["Title"] = "Home Page";
    var vehicles = Model.ToList();
}

@if (!vehicles.Any())
{
    <div class="mt-4 p-5 bg-light">

        <h1 class="display-4">Welcome to the best place for renting cars!</h1>

        @if (User.Identity.IsAuthenticated == false)
        {
             <p class="lead">
            There are no vehicles in the system currently available
            And it seems you are currently not logged in.
            Create an account with us or Log in so you can add a vehicle!
             </p>
        }

            @if (User?.Identity?.IsAuthenticated?? false)
        {
             <p class="lead">
            There are no vehicles in the system currently available
               Feel free to add a vehicle!
             </p>
        }
        <hr class="my-4">
        <p class="lead">
            @if (User?.Identity?.IsAuthenticated ?? false)
            {
                <a asp-controller="House" asp-action="Add" class="btn btn-primary btn-lg"
           role="button">Add Vehicle</a>
            }
        </p>
    </div>
}

<div class="mb-5"></div>

<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        @for (int i = 0; i < vehicles.Count(); i++)
        {
            var vehicle = vehicles[i];
            <div class="carousel-item @(i == 0 ? "active" : string.Empty)">
                <img class="d-block w-100" style="height:500px"
                 src="@vehicle.ImageUrl" alt="@vehicle.Title">
                <div class="carousel-caption d-none d-md-block">
                    <h5>
                        <a class="btn btn-primary" asp-controller="Vehicle" asp-action="Details"
                       asp-route-id="@vehicle.Id"> @vehicle.Title</a>
                    </h5>
                </div>
            </div>
        }
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>

</div>
