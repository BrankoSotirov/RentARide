@using RentARide.Core.Contracts
@using RentARide.Extensions
@inject IAgentService agentService

<ul class="navbar-nav flex-grow-1">
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Vehicle" asp-action="All">All Vehicles</a>
    </li>

    @if (this.User?.Identity?.IsAuthenticated ?? false)
    {
        
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Vehicle" asp-action="Mine">My Vehicles</a>
        </li>
        @if (await agentService.ExistsById(User.Id()))
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Vehicle" asp-action="Add">Add Vehicle</a>
            </li>
        }
       


    }


</ul>

