@model RentViewModel

@{
    ViewBag.Title = "Vehicle Details";
}

<div class="container mt-5">
    <div class="card shadow">
        <div class="row g-0">
            <div class="col-md-6">
                <img src="@Model.ImageUrl" class="img-fluid rounded-start" alt="@Model.Model" style="height: 100%; object-fit: cover;">
            </div>
            <div class="col-md-6">
                <div class="card-body">
                    <h3 class="card-title">@Model.Manufacturer @Model.Model</h3>
                    <p><strong>Description:</strong> @Model.Description</p>
                    <p><strong>Year:</strong> @Model.Year</p>
                    <p><strong>Horsepower:</strong> @Model.HorsePower HP</p>
                    <p><strong>Price Per Day:</strong> $@Model.PricePerDay</p>

                    <form method="post" asp-action="Rent" asp-route-id="@Model.Id">
                        <button type="submit" class="btn btn-primary w-100">Rent</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>